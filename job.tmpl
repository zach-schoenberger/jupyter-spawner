apiVersion: batch/v1
kind: Job
metadata:
  name: {{.JobName}}
  lables:
    jhub: notebookTester
    jhubUser: {{.UserId}}
    jhubRequestId: {{.RequestId}}
spec:
  template:
    spec:
      ttlSecondsAfterFinished: 300
      containers:
        - name: {{.JobName}}
          image: {{.Image}}
          imagePullPolicy: Always
          command: ["/bin/bash", "/home/jovyan/bin/run.sh"]
          env:
            - name: REQUEST_ID
              value: {{.RequestId}}
          volumeMounts:
            - name: submission
              mountPath: "/home/jovyan/submission"
              readOnly: true
            - name: assessor
              mountPath: "/home/jovyan/assessor"
              readOnly: true
          resources:
            requests:
              cpu: 10m
              memory: 20Mi
            limits:
              cpu: 100m
              memory: 1Gi
      restartPolicy: OnFailure
      volumes:
        - name: submission
          configMap:
            name: {{.PyScriptHash}}
        - name: assessor
          configMap:
            name: {{.Assessor}}
  backoffLimit: 1
